{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "command": "wsl",
            "args": [
                "gcc",
                "-Iinclude",
                "src/server.c",
                "src/game.c",
                "src/ipc.c",
                "-o",
                "server",
                "-pthread"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "wsl",
            "args": [
                "gcc",
                "-Iinclude",
                "src/client.c",
                "src/game.c",
                "src/ipc.c",
                "-o",
                "client"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build all",
            "dependsOn": ["build server", "build client"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "run server",
            "type": "shell",
            "command": "wsl",
            "args": ["./server", "8080"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "build gui client",
            "type": "shell",
            "command": "cl",
            "args": [
                "/Iinclude",
                "/DWIN32",
                "/D_WINDOWS",
                "gui_client.c",
                "ws2_32.lib",
                "user32.lib",
                "gdi32.lib",
                "/link",
                "/out:gui_client.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
    ]
}