{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "command": "wsl",
            "args": [
                "gcc",
                "-Iinclude",
                "src/server.c",
                "src/game.c",
                "src/ipc.c",
                "-o",
                "server",
                "-pthread"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "wsl",
            "args": [
                "gcc",
                "-Iinclude",
                "src/client.c",
                "src/game.c",
                "src/ipc.c",
                "-o",
                "client"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build all",
            "dependsOn": ["build server", "build client"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "run server",
            "type": "shell",
            "command": "wsl",
            "args": ["bash", "-c", "cd /mnt/c/Users/maros/Desktop/POSHadik/POSHadik && ./server 8080"],
            "isBackground": true,
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "run gui client",
            "type": "shell",
            "command": "wsl",
            "args": ["bash", "-c", "cd /mnt/c/Users/maros/Desktop/POSHadik/POSHadik && python3 gui_client.py 127.0.0.1 8080"],
            "isBackground": false,
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}